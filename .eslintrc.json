{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": ["eslint:recommended", "plugin:react/recommended", "prettier"],
    "parserOptions": {
        "sourceType": "module"
    },
    "plugins": ["import", "prettier", "react", "react-hooks"],
    "rules": {
        "import/order": [
            "error",
            {
                "groups": [
                    ["builtin", "external"],
                    ["internal", "parent", "sibling", "index"]
                ],
                "newlines-between": "always"
            }
        ]
    },
    "settings": {
        "react": {
            "version": "detect"
        }
    }
}
